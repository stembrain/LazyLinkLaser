{
  "name": "Lazy Link Laser",
  "version": "1.0",
  "description": "Clicks the link nearest to the cursor when active.",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [{
    "matches": ["http://*/*"],
  	"js": ["jquery-1.10.1.min.js", "lazy-link-laser-0.1.js"]
  }],
  "permissions": [
    "http://*/*", "tabs"
  ]
}